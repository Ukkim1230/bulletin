{
  "family": "youth-bulletin-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "youth-bulletin-container",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/youth-bulletin:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "SERVER_PORT",
          "value": "80"
        }
      ],
      "secrets": [
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/youth-bulletin/db/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/youth-bulletin/db/password"
        },
        {
          "name": "DB_URL",
          "valueFrom": "arn:aws:ssm:REGION:ACCOUNT_ID:parameter/youth-bulletin/db/url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/youth-bulletin",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/api/bulletin/today || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
